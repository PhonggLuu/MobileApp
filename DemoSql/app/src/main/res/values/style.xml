<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Theme Customize. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style dùng chung cho TextView với text lớn và đậm -->
    <style name="CommonTextStyle">
        <item name="android:textSize">@dimen/margin_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WelcomeTextStyle" parent="CommonTextStyle" />

    <style name="SignUpFormTextStyle" parent="CommonTextStyle" />

    <style name="OrTextStyle">
        <item name="android:textSize">@dimen/margin_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="roundedImage1">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>
</resources>