<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dangnhap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/size_16"
    android:paddingTop="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingBottom="@dimen/size_16"
    android:padding="@dimen/size_16"
    android:background="@color/background_color"
    >

    <TextView
        android:id="@+id/LoginForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_120"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/login_title"
        android:textSize="@dimen/text_size24"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/logUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginForm"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_200"
        android:layout_marginEnd="@dimen/size_16"
        android:hint="@string/username_hint"
        android:inputType="textEmailAddress"
        android:minHeight="@dimen/size_48"
        android:selectAllOnFocus="true"
        android:textColorHint="#546E7A" />

    <EditText
        android:id="@+id/logPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_16"
        android:hint="@string/matkhau"
        android:imeActionLabel="Passcore"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:minHeight="@dimen/size_48"
        android:selectAllOnFocus="true"
        android:textColorHint="#546E7A"/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/size_64"
        android:enabled="true"
        android:text="@string/login_button"
        android:layout_below="@id/logPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"/>

    <TextView
        android:id="@+id/log_NotAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="@dimen/size_16"
        android:text="@string/not_account_text"
        android:layout_centerHorizontal="true"/>


    <!-- Layout chứa đường kẻ và chữ "Or" -->
    <LinearLayout
        android:id="@+id/log_or_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_NotAccount"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Đường kẻ bên trái -->
        <View
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/height_1"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/size_16"
            android:background="@color/black" />

        <!-- TextView "Or" -->
        <TextView
            android:id="@+id/log_Or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:text="Hoặc"
            android:textSize="@dimen/text_size20"
            android:textStyle="bold" />

        <!-- Đường kẻ bên phải -->
        <View
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/height_1"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/size_16"
            android:background="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_64"
        android:enabled="true"
        android:text="@string/dangkytaikhoan"
        android:layout_below="@+id/log_or_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"/>


</RelativeLayout>